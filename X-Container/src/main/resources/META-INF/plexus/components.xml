<component-set>
    <components>
        <component>
            <implementation>org.codehaus.plexus.component.configurator.BasicComponentConfigurator
            </implementation>
            <role>org.codehaus.plexus.component.configurator.ComponentConfigurator
            </role>
            <role-hint>basic</role-hint>
        </component>
        <component>
            <implementation>org.codehaus.plexus.component.configurator.MapOrientedComponentConfigurator
            </implementation>
            <role>org.codehaus.plexus.component.configurator.ComponentConfigurator
            </role>
            <role-hint>map-oriented</role-hint>
        </component>
        <!-- self-defined -->
        <component>
            <implementation>org.apache.maven.artifact.factory.DefaultArtifactFactory
            </implementation>
            <role>org.apache.maven.artifact.factory.DefaultArtifactFactory
            </role>
            <role-hint>basic</role-hint>
        </component>
        <component>
            <implementation>org.apache.maven.artifact.repository.DefaultArtifactRepositoryFactory
            </implementation>
            <role>org.apache.maven.artifact.repository.DefaultArtifactRepositoryFactory
            </role>
            <role-hint>basic</role-hint>
        </component>
        <component>
            <implementation>org.apache.maven.artifact.installer.DefaultArtifactInstaller
            </implementation>
            <role>org.apache.maven.artifact.installer.DefaultArtifactInstaller
            </role>
            <role-hint>basic</role-hint>
        </component>
    </components>
</component-set>
